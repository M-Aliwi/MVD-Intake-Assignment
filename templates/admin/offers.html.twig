{% extends 'base.html.twig' %}

{% block title %}Admin - Alle Biedingen{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
        }
        .status-badge {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
        }
        .status-pending {
            background-color: #ffc107;
            color: #000;
        }
        .status-accepted {
            background-color: #198754;
            color: #fff;
        }
        .status-rejected {
            background-color: #dc3545;
            color: #fff;
        }
        .status-api_error {
            background-color: #6c757d;
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Alle Biedingen</h1>
        <a href="{{ path('offer_form') }}" class="btn btn-primary">Nieuw Bod</a>
    </div>

    {% if offers|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Naam</th>
                        <th>E-mail</th>
                        <th>Telefoon</th>
                        <th>Bod</th>
                        <th>Status</th>
                        <th>Externe ID</th>
                        <th>Geplaatst</th>
                        <th>Acties</th>
                    </tr>
                </thead>
                <tbody>
                    {% for offer in offers %}
                        <tr>
                            <td>{{ offer.id }}</td>
                            <td>{{ offer.name }}</td>
                            <td>{{ offer.email }}</td>
                            <td>{{ offer.phone }}</td>
                            <td>â‚¬{{ offer.amount|number_format(2, ',', '.') }}</td>
                            <td>
                                <span class="status-badge status-{{ offer.status }}">
                                    {% if offer.status == 'pending' %}
                                        In behandeling
                                    {% elseif offer.status == 'accepted' %}
                                        Geaccepteerd
                                    {% elseif offer.status == 'rejected' %}
                                        Afgewezen
                                    {% elseif offer.status == 'api_error' %}
                                        API Fout
                                    {% else %}
                                        {{ offer.status|title }}
                                    {% endif %}
                                </span>
                            </td>
                            <td>
                                {% if offer.externalId %}
                                    <code>{{ offer.externalId }}</code>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ offer.createdAt|date('d-m-Y H:i') }}</td>
                            <td>
                                <a href="{{ path('offer_status', {'id': offer.id}) }}" 
                                   class="btn btn-sm btn-outline-primary">Bekijk</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <h3>Statistieken</h3>
            <div class="row">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">{{ offers|length }}</h5>
                            <p class="card-text">Totaal</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-warning">
                                {{ offers|filter(o => o.status == 'pending')|length }}
                            </h5>
                            <p class="card-text">In behandeling</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-success">
                                {{ offers|filter(o => o.status == 'accepted')|length }}
                            </h5>
                            <p class="card-text">Geaccepteerd</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-danger">
                                {{ offers|filter(o => o.status == 'rejected')|length }}
                            </h5>
                            <p class="card-text">Afgewezen</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Geen biedingen gevonden</h4>
            <p>Er zijn nog geen biedingen geplaatst.</p>
            <hr>
            <a href="{{ path('offer_form') }}" class="btn btn-primary">Eerste bod plaatsen</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
